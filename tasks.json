{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Docker Environment",
      "type": "shell",
      "command": "docker-compose up -d",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Stop Docker Environment",
      "type": "shell",
      "command": "docker-compose down",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Backend Dependencies",
      "type": "shell",
      "command": "npm install",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Install Mobile Dependencies",
      "type": "shell",
      "command": "npm install",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/mobile"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Run Backend Tests",
      "type": "shell",
      "command": "npm test",
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Backend Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    },
    {
      "label": "Start Expo Dev Server",
      "type": "shell",
      "command": "npx expo start",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/mobile"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Database Migration",
      "type": "shell",
      "command": "npm run migrate",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Code (All)",
      "type": "shell",
      "command": "npx prettier --write .",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint Backend",
      "type": "shell",
      "command": "npx eslint src/",
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": ["$eslint-stylish"]
    }
  ]
}