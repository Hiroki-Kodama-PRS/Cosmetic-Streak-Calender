# 化粧品使用量管理アプリ - 環境設定

# アプリ基本設定
APP_NAME="Cosmetic Usage Tracker"
APP_VERSION="1.0.0"
NODE_ENV=development
PORT=3000

# データベース設定 (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cosmetic_tracker
DB_USER=postgres
DB_PASSWORD=your_password

# JWT認証設定 (軽量認証)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d
SESSION_TIMEOUT=30m

# Firebase 通知設定
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-service-account@firebase.com

# IoTデバイス設定
IOT_DEVICE_TIMEOUT=30s
BLE_SCAN_DURATION=10s

# ファイルストレージ
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5MB

# API設定
API_BASE_URL=http://localhost:3000/api
API_RATE_LIMIT=100

# ログ設定
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 美容アドバイザー機能
ADVISOR_EMAIL_ENABLED=true
ADVISOR_NOTIFICATION_ENABLED=true

# 開発用設定
DEBUG_MODE=true
MOCK_IOT_DATA=false
